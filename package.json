{
  "name": "lifx-lan-client",
  "description": "Node.js implementation of the LIFX LAN protocol",
  "version": "1.0.2",
  "author": "Marius Rumpf <marius@mariusrumpf.de>",
  "bugs": {
    "url": "https://github.com/node-lifx/lifx-lan-client/issues"
  },
  "dependencies": {
    "eventemitter3": "^2.0.3",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@types/node": "^13.9.0",
    "typescript": "^3.8.3",
    "chai": "^4.2.0",
    "codecov.io": "^0.1.6",
    "eslint": "^5.16.0",
    "istanbul": "^0.4.0",
    "lolex": "^1.6.0",
    "mkdirp": "^0.5.1",
    "mocha": "^6.2.0",
    "rimraf": "^2.7.1",
    "sinon": "^4.5.0"
  },
  "directories": {
    "test": "test",
    "lib": "lib",
    "example": "example"
  },
  "homepage": "https://github.com/node-lifx/lifx-lan-client#readme",
  "keywords": [
    "bulb",
    "lan",
    "lifx",
    "light",
    "lightbulb"
  ],
  "license": "MIT",
  "main": "./lib/lifx",
  "types": "./src/lifx.d.ts",
  "engines": {
    "node": ">=4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/node-lifx/lifx-lan-client.git"
  },
  "scripts": {
    "xprepare": "npm run build",
    "xprebuild": "npm run clean && mkdirp lib/lifx && cp src/lifx/products.json lib/lifx",
    "xbuild": "npm run prebuild && babel src --out-dir lib",
    "xbuild:watch": "npm run build -- --watch",
    "xclean": "rimraf lib",
    "xlint": "eslint src/ test/ example/ cli.js",
    "xlint:fix": "npm run lint -- --fix",
    "xpretest": "npm run lint && npm run build",
    "xunittest": "mocha -u bdd -r babelhook --recursive test/unit/ || true",
    "xunittest:bail": "mocha -u bdd -r babelhook --recursive test/unit/ --bail || true",
    "xtest": "istanbul cover -root lib/ node_modules/mocha/bin/_mocha -- -u bdd -r babelhook --recursive test/unit/",
    "xreport-coverage": "cat ./coverage/coverage.json | node_modules/codecov.io/bin/codecov.io.js"
  }
}
